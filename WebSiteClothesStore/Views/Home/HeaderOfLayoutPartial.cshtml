    })
    $("#btnLogin").click(function () {
        var taiKhoan = $(".TaiKhoan").val();//.val() lấy giá trị trong thẻ
        var matKhau = $(".MatKhau").val();
        if (taiKhoan == "" || matKhau == null) {
            alert("Lỗi");
            return;
        }
    });
    $(".btnRegistration").click(function () {
        $("#popup-login").css({
            "display": "none",
        });
        $(".register-form").fadeIn(500);
    });
